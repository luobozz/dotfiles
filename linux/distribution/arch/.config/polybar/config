[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 0
lable-padding = 1



[colors]
background = #cc37474F

foreground = #eeeeee

icon = #222
alert = #222

tag-focused-background = #6688ad
tag-unfocused-background = #37474F
tag-visible-background = #37474F
tag-urgent-background = #37474F

spotify = #1db954



[bar/main]
monitor = DVI-D-0
monitor-strict = false
width = 100%
height = 28
offset-x = 0%
;offset-y = 1%
radius = 0
fixed-center = true

enable-ipc = true
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 6
line-color = ${colors.icon}

padding-right = 0

font-0 = Fira Mono:size=10;2
font-1 = Fira Code Nerd Font Mono:size=14;2
font-2 = Alibaba PuHuiTi 2.0:size=10;2

modules-left = i3 title
modules-center = date
modules-right = raf mem cpu network-proxy network 
; modules-right = termdown updates spotify previous playpause next pad weather-icon weather-temp pad memory pad cpu cpu-speed pad temperature wlan eth expressvpn openvpn battery backlight pulseaudio date restart lock notifications redshift powermenu

tray-position = right
tray-padding = 1

override-redirect = false

cursor-click = pointer
cursor-scroll = ns-resize

