#!/bin/bash
case $BLOCK_BUTTON in
    1) notify-send "月份信息" "$(cal --color=always | sed "s/..7m/<b><span color=\"red\">/;s/..27m/<\/span><\/b>/")" && notify-send "日程" "$(calcurse -D ~/.config/calcurse -d3)" ;;
    3) dwmblocktools-exec 'st -e calcurse' ;;
    6) "code" "$0";;
esac

week=$(date '+%w')
case "$week" in
    "1") cweek="周一" ;;
    "2") cweek="周二" ;;
    "3") cweek="周三" ;;
    "4") cweek="周四" ;;
    "5") cweek="周五" ;;
    "6") cweek="周六" ;;
    "0") cweek="周日" ;;
esac

clock=$(date '+%H')
if (( clock < 8 )); then
    sign="凌晨了,早点休息"
elif (( clock < 12 )); then
    sign="早上好"
elif (( clock < 14 )); then
    sign="中午好"
elif (( clock < 18 )); then
    sign="下午好" 
else
    sign="晚上好"
fi



echo " $sign $(date +"%Y年%-m月%-d日 $cweek %R:%S") "